{% set flavor_name = flavor_name or "m1.tiny" %}
{% set servers_to_build = servers_to_build or 5 %}
{
    "NovaServers.boot_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "^cirros.*uec$"
                }
            },
            "runner": {
                "type": "constant",
                "times": 1,
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            }
        },
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "^cirros.*uec$"
                }
            },
            "runner": {
                "type": "constant",
                "times": {{servers_to_build}},
                "concurrency": {{servers_to_build}}
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            }
        }
    ]
}
                    
