{% set flavor_name = flavor_name %}
{% set image_name = image_name %}
{% set volume_type = volume_type or "lvm" %}
{% set volume_size = volume_size %}
{% set new_volume_size = new_volume_size %}
{% set iterations = iterations %}
{
    "NovaServers.boot_and_delete_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "force_delete": false
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        },
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "force_delete": false,
                "alternate_name": "novaservers.boot_server_and_delete_single"
            },
            "runner": {
                "type": "constant",
                "times": 1,
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
    "NovaServers.boot_server_from_volume_and_delete": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "volume_size": {{volume_size}},
                "volume_type": "{{volume_type}}",
                "force_delete": false
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
    "CinderVolumes.create_and_delete_snapshot": [
        {
            "args": {
                "force": false
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "volumes": {
                    "size": {{volume_size}}
                },
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
    "CinderVolumes.create_volume_and_clone": [
        {
            "args": {
                "size": {{volume_size}}
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
    "CinderVolumes.create_volume_from_snapshot": [
        {
            "args": {
                "do_delete": true
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "volumes": {
                    "size": {{volume_size}}
                },
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
     "CinderVolumes.create_and_extend_volume": [
        {
            "args": {
                "size": {{volume_size}},
                "new_size": {{new_volume_size}}
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
    "GlanceImages.create_and_delete_image": [
        {
            "args": {
                "image_location": "http://cloud-images.ubuntu.com/xenial/current/xenial-server-cloudimg-amd64-disk1.img",
                "container_format": "bare",
                "disk_format": "qcow2"
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": 1
            },
            "context": {
                "users": {
                    "tenants": 1,
                    "users_per_tenant": 1
                }
            }
        }
    ],
    "KeystoneBasic.authenticate_user_and_validate_token": [
        {
            "args": {},
            "runner": {
                "type": "constant",
                "times": 20,
                "concurrency": 5
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
 "NovaServers.boot_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                }
            },
            "runner": {
                "type": "constant",
                "times": {{iterations}},
                "concurrency": {{iterations}},
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            }
        }
    ],
    "NovaServers.boot_server_from_volume_snapshot": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "volume_size": 10,
                "volume_type": "{{volume_type}}"
            },
            "runner": {
                "type": "constant",
                "times": 10,
                "concurrency": 2
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            }
        }
    ],
    "GlanceImages.create_image_and_boot_instances": [
        {
            "args": {
                "image_location": "http://download.cirros-cloud.net/0.3.4/cirros-0.3.4-x86_64-disk.img",
                "container_format": "bare",
                "disk_format": "qcow2",
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "number_instances": 2
            },
            "runner": {
                "type": "constant",
                "times": 10,
                "concurrency": 2
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 5
                }
            }
        }
    ],
}
